%h2= t 'devise.invitations.edit.header'
= form_for resource, :as => resource_name, :url => invitation_path(resource_name), html: { method: :put, class: 'form-horizontal' } do |f|
  = render 'layouts/errors', object: resource
  
  = f.hidden_field :invitation_token
  
  %fieldset
    .control-group
      = f.label :password, class: 'control-label'
      .control
        = f.password_field :password
        
    .control-group
      = f.label :password_confirmation, class: 'control-label'
      .control
        = f.password_field :password_confirmation
        
  = f.submit t('devise.invitations.edit.submit_button'), class: 'btn btn-primary'
